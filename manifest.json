{
  "manifest_version": 3,
  "name": "Tab Double-Click Grouper",
  "version": "1.0",
  "description": "Double-click a tab to move it into a new group.",
  "permissions": ["tabs", "tabGroups"],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"]
    }
  ],
  "host_permissions": ["<all_urls>"],
  "action": {
    "default_title": "Group this tab"
  },
  "commands": {
    "group-tab": {
      "suggested_key": {
        "default": "Ctrl+Shift+Y"
      },
      "description": "Group the current tab into a new group"
    }
  }
} 